#!/bin/bash
set -euo pipefail

SCRIPTDIR=$(dirname "$0")
CMD='Initialization'
SUCCESS=''

function cleanup {
  if [[ -z $SUCCESS ]]; then
    echo ""
    echo "ðŸ’€  Failed when $CMD"
    echo "ðŸš§  Setup log:"
    cat /tmp/setup.log
  fi
  rm -f /tmp/setup.log
}
trap cleanup EXIT

function missing() {
  EXIST=`command -v $1`
  if [[ -n $EXIST ]]; then
    echo "1"
  fi
}

# Install brew
CMD='installing brew'
if [[ -z `missing brew` ]]; then
  echo "ðŸ»  Installing homebrew"
  /usr/bin/ruby -e "$(curl -fsSL https://git.io/pVOl)" \
    >> /tmp/setup.log
else
  echo "ðŸ»  Homebrew already installed"
fi

# Brew update formulae
CMD='updating formulae'
echo "ðŸ’¿  Updating your brew formulae"
brew update >> /tmp/setup.log

# Brew adding taps
CMD='adding taps'
echo "ðŸš°  Adding required brew taps"
brew tap 'Homebrew/bundle' --full >> /tmp/setup.log
brew tap 'caskroom/cask' --full >> /tmp/setup.log

# Install and log into mas
CMD='setting up mas'
echo "ðŸŽ  Setup mas-cli for App Store"
if [[ -z `missing mas` ]]; then
  brew install mas
fi
if [[ -n `mas account | grep "Not signed in"` ]]; then
  printf "Apple ID Email: "
  read APPLE_ID_EMAIL
  printf "Apple ID Password: "
  read -s APPLE_ID_PASSWORD
  mas signin $APPLE_ID_EMAIL $APPLE_ID_PASSWORD >> /tmp/setup.log
  echo ''
fi

# Installing using bundle
CMD='installing bundle'
echo "ðŸ‘œ  Running brew bundle"
if [[ -z `brew bundle check | grep "dependencies are satisfied"` ]]; then
  brew bundle -v >> /tmp/setup.log
fi

# Running dropsync
CMD='running dropsync'
echo "âš“  Syncing dotfiles"
$SCRIPTDIR/dropsync >> /tmp/setup.log

# Installing modules
CMD='installing modules'
echo "ðŸ“¦  Installing modules"
for MODULE in `find $SCRIPTDIR/../modules/. -mindepth 1 -maxdepth 1 -type d`
do
  MODULE_NAME=$(basename $MODULE)
  echo "  âš™ï¸  Installing module - $MODULE_NAME"

  # Optionally install brew bundles
  if [[ -f "$MODULE/Brewfile" ]]; then
    cd $MODULE && brew bundle -v >> /tmp/setup.log
  fi

  # Optionally execute module setup
  if [[ -f "$MODULE/setup" ]]; then
    cd $MODULE && ./setup >> /tmp/setup.log
  fi
done

SUCCESS='1'
